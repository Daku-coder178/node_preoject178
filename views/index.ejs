<style>
.movie-card {
  border: 1px solid #2196F3; /* New color scheme */
  border-radius: 8px;
  padding: 15px;
  margin: 15px;
  width: 300px;
  display: inline-block;
  transition: transform 0.3s, box-shadow 0.3s; /* Added box-shadow transition */
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Added box-shadow for materialized effect */
}
  .movie-card {
    transition: transform 0.3s;
  }

  .movie-card.show {
    transform: scale(1.05);
  }

.movie-card img {
  width: 100%;
  height: 200px; /* Adjusted height for better display */
  object-fit: cover;
  margin-bottom: 10px;
  border-radius: 5px; /* Rounded corners for the image */
}

.movie-card:hover {
  transform: scale(1.05);
  box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2); /* Increased shadow on hover */
}

.movie-card h2 {
  color: #2196F3; /* New color for movie title */
}

.movie-card p {
  color: #333; /* New color for movie description and release date */
}
.navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #333;
    color: white;
    padding: 10px;
  }

  .navbar a {
    color: white;
    text-decoration: none;
    margin: 0 10px;
  }

  .search-bar {
    display: flex;
    align-items: center;
  }

  .search-bar input {
    padding: 5px;
    margin-right: 10px;
  }

  .search-bar button {
    padding: 5px 10px;
    background-color: #555;
    color: white;
    border: none;
    cursor: pointer;
  }
</style>

<div class="navbar">
  <a href="/">Home</a>
  <a href="/anime">Anime</a>
  <a href="/bollywood">Bollywood</a>
  <a href="/hollywood">Hollywood</a>
  <a href="/southmovies">South Movies</a>
  <div class="search-bar">
    <input type="text" id="searchInput" placeholder="Search for movies...">
    <button id="searchButton">Search</button>
  </div>
</div>

<h1>Movies</h1>
<div class="movie-container">
  <% movies.forEach(movie => { %>
    <div class="movie-card">
      <h2><%= movie.title %></h2>
      <img src="<%= movie.img_link %>" alt="<%= movie.title %>">
      <p><%= movie.description %></p>
      <p>Release Date: <%= movie.release_date %></p>
    </div>
  <% }); %>
</div>
<script>
  const searchInput = document.getElementById('searchInput');
  const searchButton = document.getElementById('searchButton');
  const movieCards = document.querySelectorAll('.movie-card');

  searchButton.addEventListener('click', () => {
    const searchTerm = searchInput.value.toLowerCase();

    movieCards.forEach(card => {
      const title = card.querySelector('h2').innerText.toLowerCase();
      if (title.includes(searchTerm)) {
        card.style.display = 'block';
        card.classList.add('show');
      } else {
        card.style.display = 'none';
        card.classList.remove('show');
      }
    });
  });
</script>